partial hidden alphanumeric_keys
xkb_symbols "kinesis" {
    name[Group1] = "Kinesis Advantage2";

    // Special media keys (XF86)
    key <AE11> { [ XF86RefreshRateToggle ] };
    key <AE12> { [ XF86DoNotDisturb  ] };

    // Macro keys (replace <MAC1>, <MAC2>, <MAC3> with actual key identifiers after running evtest)
    key <MAC1> { [ F13 ] };
    key <MAC2> { [ F14 ] };
    key <MAC3> { [ F15 ] };

    // Consumer control (media) keys
    key <VOLD> { [ XF86AudioLowerVolume ] };
    key <VOLU> { [ XF86AudioRaiseVolume ] };
    key <MUTE> { [ XF86AudioMute ] };
    key <PLAY> { [ XF86AudioPlay ] };
    key <NEXT> { [ XF86AudioNext ] };
    key <PREV> { [ XF86AudioPrev ] };

    // System control keys
    key <POWR> { [ XF86PowerOff ] };
    key <SLEP> { [ XF86Sleep ] };
};
